
@{
    ViewBag.Title = "Dashboard";
}


<!-- Header/Navbar -->
<nav class="navbar navbar-expand navbar-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="@Url.Action("Dashboard", "Home")">
            <i class="bi bi-mortarboard-fill me-2"></i>
            Student Management Admin Dashboard
        </a>

        <div class="d-flex align-items-center">
            <i class="bi bi-person-circle me-2"></i>

            @if (Session["User"] != null)
            {
                <span class="me-3">@Session["User"]</span>
                <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-secondary">
                    Logout
                </a>
            }
            else
            {
                <a href="@Url.Action("Login", "Account")" class="btn btn-primary">
                    Login
                </a>
            }
        </div>
    </div>
</nav>


<!-- Dashboard Overview -->
<div class="container mt-4">
    <h2>Dashboard Overview</h2>
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card p-3">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="card-subtitle mb-2">Total Students</h6>
                        <h2 class="card-title mb-0">3</h2>
                        <p class="card-text card-subtitle mt-2">All enrolled students</p>
                    </div>
                    <i class="bi bi-people card-icon"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="card-subtitle mb-2">Active</h6>
                        <h2 class="card-title mb-0">3</h2>
                        <p class="card-text card-subtitle mt-2">Currently studying</p>
                    </div>
                    <i class="bi bi-person card-icon"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="card-subtitle mb-2">Inactive</h6>
                        <h2 class="card-title mb-0">0</h2>
                        <p class="card-text card-subtitle mt-2">On leave or suspended</p>
                    </div>
                    <i class="bi bi-person-x card-icon"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="card-subtitle mb-2">Graduated</h6>
                        <h2 class="card-title mb-0">0</h2>
                        <p class="card-text card-subtitle mt-2">Completed studies</p>
                    </div>
                    <i class="bi bi-mortarboard card-icon"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Students Section -->
    <h2>Students</h2>
    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" class="form-control" placeholder="Search students...">
        </div>
        <div class="col-md-3">
            <select class="form-select">
                <option>All Status</option>
                <!-- Add more options if needed -->
            </select>
        </div>
        <div class="col-md-3">
            <button class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#addStudentModal"><i class="bi bi-person-plus-fill me-2"></i>Add Student</button>
        </div>
    </div>

    <!-- Table -->
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Grade</th>
                <th>Phone</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
